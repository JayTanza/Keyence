using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.SqlClient;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Windows.Forms;

namespace keyencePartsVerifier.MAINTENANCE
{
    public partial class line_mnt_add : Form
    {
        public line_mnt_add()
        {
            InitializeComponent();
        }

        private void btn_close_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void btn_add_Click(object sender, EventArgs e)
        {
            if (string.IsNullOrEmpty(txt_line.Text.Trim()))
            {
                MessageBox.Show("Please enter line name!", "Required Field", MessageBoxButtons.OK, MessageBoxIcon.Error);
                txt_line.Focus();
                return;
            }

            Int32 count = 0;
            string txtProduct = txt_line.Text.Trim().Replace("'", "''").Replace("[", "");
            try
            {
                SqlCommand cmdS = new SqlCommand("SELECT COUNT(*) FROM tbl_web_line WHERE lineName like '" + txtProduct + "'", gclass.con);
                gclass.con.Open();
                count = (Int32)cmdS.ExecuteScalar();
                gclass.con.Close();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error on inquiring line! Please contact administrator! \nDetails: " + ex.Message,
                    "Error SQL", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }
    }
}
