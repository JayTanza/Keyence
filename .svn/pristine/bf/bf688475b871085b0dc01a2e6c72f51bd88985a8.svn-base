using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.SqlClient;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Windows.Forms;

namespace keyencePartsVerifier.MAINTENANCE
{
    public partial class feeder_mnt_add : Form
    {
        public feeder_mnt_add()
        {
            InitializeComponent();
        }
        public static bool isUpdated = false;
        private void btn_close_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void btn_add_Click(object sender, EventArgs e)
        {
            if (string.IsNullOrEmpty(txt_feeder.Text))
            {
                MessageBox.Show("Please enter feeder name!", "Required Field", MessageBoxButtons.OK, MessageBoxIcon.Error);
                txt_feeder.Focus();
                return;
            }

            Int32 count = 0;
            string txtFeeder = txt_feeder.Text.Trim().Replace("'", "''").Replace("[", "");
            try
            {
                SqlCommand cmdS = new SqlCommand("SELECT COUNT(*) FROM tbl_web_feeder WHERE feederName like '%" + txtFeeder + "%'", gclass.con);
                gclass.con.Open();
                count = (Int32)cmdS.ExecuteScalar();
                gclass.con.Close();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error on inquiring feeder! Please contact administrator! \nDetails: " + ex.Message,
                    "Error SQL", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }


            if (count > 0)
            {
                MessageBox.Show("Feeder Name: '" + txtFeeder + "' already exists in Product List!", "Product Already Exists", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return;
            }
            else
            {
                try
                {
                    SqlCommand cmdI = new SqlCommand("INSERT INTO tbl_web_feeder(feederName, updatedBy, updatedByName, datetimeUpdated) " +
                        "VALUES(@fN, @uB, @uBN, @dt)", gclass.con);
                    gclass.con.Open();
                    cmdI.Parameters.AddWithValue("@fN", txtFeeder);
                    cmdI.Parameters.AddWithValue("@uB", gclass.gs_user.Trim());
                    cmdI.Parameters.AddWithValue("@uBN", gclass.gs_funame);
                    cmdI.Parameters.AddWithValue("@dt", DateTime.Now.ToString());
                    cmdI.ExecuteNonQuery();
                    gclass.con.Close();

                    isUpdated = true;
                    MessageBox.Show("Added '" + txtFeeder + "' to feeders!", "Added successfully!", MessageBoxButtons.OK, MessageBoxIcon.Information);
                    this.Close();
                }
                catch (Exception ex)
                {
                    MessageBox.Show("Error on inserting feeders! Please contact administrator! \nDetails: " + ex.Message,
                    "Error SQL", MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
        }

        private void feeder_mnt_add_Load(object sender, EventArgs e)
        {
            isUpdated = false;
        }
    }
}
