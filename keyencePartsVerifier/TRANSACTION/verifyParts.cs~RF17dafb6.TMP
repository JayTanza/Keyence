    public partial class verifyParts : Form
    {
        public verifyParts()
        {
            InitializeComponent();
        }
        DataTable dt;
        private void verifyParts_Load(object sender, EventArgs e)
        {
            _loadTransByBatch();
            _verifyParts();
        }
        private void _loadTransByBatch()
        {
            try
            {
                SqlCommand cmdS = new SqlCommand("SELECT * FROM tbl_web_transaction", gclass.con);
                gclass.con.Open();
                //SqlDataAdapter da = new SqlDataAdapter(cmdS);
                //dt = new DataTable();
                //da.Fill(dt);
                SqlDataReader dr = cmdS.ExecuteReader();
                while(dr.Read())
                {
                    Image img = Image.FromFile("D:\\error.png");
                    data.Rows.Add(img, dr["batchID"].ToString(), dr["productName"].ToString(), 1);
                }
                dr.Close();
                gclass.con.Close();

                //data.DataSource = dt;
            }
            catch(Exception ex)
            {
                MessageBox.Show(ex.Message, "Error: SQL", MessageBoxButtons.OK,MessageBoxIcon.Error);
            }
        }
        private void _verifyParts()
        {
            Image img = Image.FromFile("D:\\error.png");
            data.Rows.Add(img, "batchbatch", "hdhehhahahdha", 0);
            if (data.Rows.Count > 0)
            {
                foreach (DataGridViewRow row in data.Rows)
                {
                    if (row.Cells["dg_yes"].Value.ToString() == "1")
                    {
                        ((DataGridViewImageCell)row.Cells["dg_image"]).Value = Properties.Resources.noimage;
                    }
                    else
                    {
                        ((DataGridViewImageCell)row.Cells["dg_image"]).Value = img;
                    }
                }
            }
            

        }

        private void _filterValues(string txt2search)
        {
            try
            {
                foreach (DataGridViewRow row in data.Rows)
                {
                    if (row.Cells["dg_mamama"].Value.ToString().Trim().Equals(txt2search))
                    {
                        row.DefaultCellStyle.BackColor = Color.Red;
                        break;
                    }
                }
            }
            catch (Exception exc)
            {
                MessageBox.Show(exc.Message);
            }
        }
        private void data_RowPostPaint(object sender, DataGridViewRowPostPaintEventArgs e)
        {
            gclass._dgvRows(sender,e,this.Font);
        }

        private void textBox1_TextChanged(object sender, EventArgs e)
        {
            _filterValues(textBox1.Text.Trim());
        }

        private void metroToggle1_CheckedChanged(object sender, EventArgs e)
        {
            if(data.Rows.Count>0)
            {
                foreach(DataGridViewRow row in data.Rows)
                {
                    if(row.Cells["dg_yes"].Value.ToString().Trim()=="0")
                    {
                        row.Visible = false;
                    }
                }
            }
        }
    }
}
